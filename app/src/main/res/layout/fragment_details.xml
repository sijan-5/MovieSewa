<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.DetailsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1167b1"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_16"
            app:cardCornerRadius="@dimen/dimen_12"
            >
            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/open_hem"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id ="@+id/dropPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/dimen_48"
            android:background="@drawable/open_hem"
            android:alpha="0.7"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        android:text="The Little Mermaid"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dimen_20sp"
        android:layout_marginTop="@dimen/dimen_16"
        />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Score"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:textSize="@dimen/dimen_16sp"
        android:layout_marginTop="@dimen/dimen_48"
        android:layout_marginStart="@dimen/dimen_48"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="@dimen/dimen_24"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/scoreText"
        app:layout_constraintBottom_toBottomOf="@id/scoreText"
        app:layout_constraintStart_toEndOf="@id/scoreText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/playTrailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Score"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/scoreText"
        app:layout_constraintBottom_toBottomOf="@id/scoreText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_48"
        android:textSize="@dimen/dimen_16sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardStrip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64"
        app:layout_constraintTop_toBottomOf="@+id/playTrailer"
        android:layout_marginTop="@dimen/dimen_40"
        android:backgroundTint="#1a5091"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_marginTop="@dimen/dimen_8"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_marginTop="@dimen/dimen_4"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp"
                android:fontFamily="sans-serif-condensed"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/guff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_20sp"
        android:textColor="#dcd3fe"
        app:layout_constraintTop_toBottomOf="@id/cardStrip"
        android:text="guff"
        android:layout_marginTop="@dimen/dimen_16"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/overView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_24sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/guff"
        android:text="Overview"
        android:layout_marginTop="@dimen/dimen_12"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/overViewGuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/overView"
        android:text="Overview"
        android:layout_marginTop="@dimen/dimen_12"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>